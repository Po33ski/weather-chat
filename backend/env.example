# Weather Center Chat - Environment Variables
# Copy this file to .env and fill in your actual API keys

# Visual Crossing Weather API
# Get your key from: https://www.visualcrossing.com/weather-api
VISUAL_CROSSING_API_KEY=your_visual_crossing_api_key_here

# Google Cloud API Key for ADK (AI Chat)
# Get your key from: https://console.cloud.google.com/
GOOGLE_API_KEY=your_google_api_key_here

# Optional: AI Model to use (default: gemini-2.0-flash)
MODEL=gemini-2.0-flash

# Optional: Disable web driver (0 = enabled, 1 = disabled)
DISABLE_WEB_DRIVER=0

# Optional: Environment (development/production)
ENVIRONMENT=development 